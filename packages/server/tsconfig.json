{
	"extends": "@roenlie/tsconfig",
	"compilerOptions": {
		"rootDir": ".",
		"baseUrl": ".",
		"types": [
			"vite/client",
			"node",
		],
		"useDefineForClassFields": true,
		"plugins": [
			{
				"name": "ts-lit-plugin",
				"rules": {
					"no-incompatible-type-binding": "off"
				}
			}
		]
	},
	"include": [
		"**/*.ts",
		"**/*.d.ts",
		"**/*.js",
		"../live-ts-imports/src/resolve-pkg-deps.ts",
		"../live-ts-imports/src/custom-serve-static.ts",
		"../live-ts-imports/src/create-import-map.ts",
		"../live-ts-imports/src/create-client-symlinks.ts",
		"client/imports.jspn",
	],
	"exclude": [
		"dist",
		"node_modules"
	]
}