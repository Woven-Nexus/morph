{
	"extends": "@roenlie/tsconfig",
	"compilerOptions": {
		"rootDir": ".",
		"baseUrl": ".",
		"types": [
			"vite/client",
			"node",
		],
		"useDefineForClassFields": true,
		"plugins": [
			{
				"name": "ts-lit-plugin",
				"rules": {
					"no-incompatible-type-binding": "off"
				}
			}
		]
	},
	"include": [
		"**/*.ts",
		"**/*.d.ts",
		"**/*.js",
	],
	"exclude": [
		"dist",
		"node_modules"
	]
}