{
	"$schema": "./node_modules/@biomejs/biome/configuration_schema.json",
	"organizeImports": {
		"ignore": [
			".vscode/settings.json",
			"node_modules"
		]
	},
	"linter": {
		"rules": {
			"recommended": true,
			"style": {
				"noNonNullAssertion": "off"
			},
			"suspicious": {
				"noExplicitAny": "off"
			},
			"complexity": {
				"noForEach": "off",
				"noThisInStatic": "off",
				"noStaticOnlyClass": "off"
			}
		},
		"ignore": [
			"*.json",
			"node_modules"
		]
	},
	"formatter": {
		"formatWithErrors": false,
		"ignore": [
			"configuration-schema.json",
			"node_modules"
		]
	},
	"javascript": {
		"parser": {
			"unsafeParameterDecoratorsEnabled": true
		},
		"formatter": {
			"arrowParentheses": "asNeeded",
			"quoteStyle": "single",
			"bracketSpacing": true
		}
	},
	"json": {
		"formatter": {
		}
	}
}