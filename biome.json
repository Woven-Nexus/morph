{
	"$schema": "./node_modules/@biomejs/biome/configuration_schema.json",
	"organizeImports": {
		"enabled": true,
		"ignore": [
			".vscode/settings.json"
		]
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"style": {
				"noNonNullAssertion": "off"
			},
			"suspicious": {
				"noExplicitAny": "off"
			}
		},
		"ignore": [
			"*.json"
		]
	},
	"formatter": {
		"formatWithErrors": true,
		"ignore": [
			"configuration-schema.json"
		]
	},
	"javascript": {
		"parser": {
			"unsafeParameterDecoratorsEnabled": true
		},
		"formatter": {
			"enabled": true,
			"arrowParentheses": "asNeeded",
			"quoteStyle": "single",
			"bracketSpacing": true
		}
	},
	"json": {
		"formatter": {
			"enabled": false
		}
	}
}